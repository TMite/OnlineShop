<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, class: 'label-form' %>
    <%= form.text_field :title, class: 'text-box' %>
  </div>

  <div class="field">
    <%= form.label :description, class: 'label-form' %>
    <%= form.text_area :description, class: 'text-box' %>
  </div>

  <div class="field">
    <%= form.label :image, class: 'label-form' %>
    <%= form.file_field :image %>

  <div class="field">
    <%= form.label :price, class: 'label-form' %>
    <%= form.text_field :price, class: 'text-box' %>
  </div>

  <div class="field">
    <%= form.label :active, class: 'label-form' %>
    <%= form.check_box :active, checked: true, class: 'text-box' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
