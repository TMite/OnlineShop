<h1>Cart#show</h1>
<p>Find me in app/views/carts/show.html.erb</p>

<% @order_items.each do |item| %>
    <h3><%=item.product.title %></h3>
    <h5><%=number_with_precision(item.product.price, precision: 2) %></h3>

    <%= form_for item, remote: true do |f| %>
        <%f.hidden_field :product_id, :value => item.product.id %>
        <%=f.number_field :quantity, :value => item.quantity.to_i %>
        <%=f.submit "Update Cart" %>
        <%=link_to "Remove Order Item", order_item_path(item), method: :delete, remote: true %>
    <%end %>
    <h2>Subtotal: <%=number_with_precision(item.total, precision: 2)%></h2>
<%end %>

<h1>Order Total: <%=number_with_precision(current_order.subtotal, precision: 2) %></h1>
