<%
=begin%>
 <p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Number of flavors required:</strong>
  <%= @product.required_num %>
</p>

<p>
  <strong>Price:</strong>
  <%= number_with_precision(@product.price, precision: 2) %>
</p>

<%= link_to 'Back', root_path %> 
<%
=end%>

<body>
  <%= @product.title %>
  <%= image_tag(@product.image, style:'height:60%; width:50%;')%>
  <%= @product.description %>
  <%= @product.price %>
  <%= form_for @order_item, remote: true do |f| %>
    <%=f.hidden_field :product_id, :value => @product.id%>
    <%=f.number_field :quantity, :value => 1, :min => 1, style: 'width: 20%; display:inline;' %>
    <%=f.submit "Add to Cart", class: 'btn btn-secondary', style: 'font-family: Georgia, serif; display:inline;'%>
  <%end %>
</body>